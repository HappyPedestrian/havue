{
  "name": "pedy",
  "version": "1.0.0",
  "scripts": {
    "build:package": "vite build --mode package",
    "build:full": "vite build --mode full",
    "build:full-min": "vite build --mode full-min",
    "build": "pnpm run build:package && pnpm run build:full && pnpm run build:full-min"
  },
  "dependencies": {
    "@pedy/shared": "workspace:*",
    "@pedy/components": "workspace:*",
    "@pedy/hooks": "workspace:*",
    "@pedy/directives": "workspace:*",
    "@pedy/solutions": "workspace:*",
    "@pedy/tools": "workspace:*"
  },
  "devDependencies": {
    "vue": "^3.3.0"
  },
  "peerDependencies": {
    "vue": "^3.3.0"
  },
  "main": "./dist/pedy.js",
  "module": "./dist/pedy.mjs",
  "types": "./dist/types/src/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/pedy.js",
      "import": "./dist/pedy.mjs",
      "types": "./dist/types/src/index.d.ts"
    }
  }
}