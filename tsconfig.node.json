{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext"],
    "types": ["node"],
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true
  },
  "include": [
    "**/*.config.*",
    "internal/build",
    ".lintstagedrc.js",
    ".commitlintrc.cjs",
    "scripts/**/*",
    "packages/pedy/package.json"
  ],
  "exclude": ["**/dist", "**/node_modules", "eslint.config.js"]
}
