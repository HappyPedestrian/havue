{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "lib": ["ESNext"],
    "types": ["node"],
    "skipLibCheck": true,
    "allowJs": true,
    "strict": true,
    "paths": {
      "@pedy/build": ["../packages/build/src"]
    }
  },
  "include": ["**/*.config.*", "packages/build", ".lintstagedrc.js", ".commitlintrc.cjs"],
  "exclude": ["**/dist", "**/node_modules", "eslint.config.js"]
}
